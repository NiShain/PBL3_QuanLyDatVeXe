@model PBL3_QuanLyDatXe.Models.Bus
@{
    ViewData["Title"] = "Xóa xe";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-body">
        <h3 class="text-danger mb-4">Bạn có chắc chắn muốn xóa xe này?</h3>

        <dl class="row">
            <dt class="col-sm-2">Biển số:</dt>
            <dd class="col-sm-10">@Model.bienSo</dd>

            <dt class="col-sm-2">Tên xe:</dt>
            <dd class="col-sm-10">@Model.tenXe</dd>

            <dt class="col-sm-2">Số ghế:</dt>
            <dd class="col-sm-10">@Model.soGhe</dd>

            <dt class="col-sm-2">Loại xe:</dt>
            <dd class="col-sm-10">@Model.loaiXe</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="id" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        </form>
    </div>
</div>
