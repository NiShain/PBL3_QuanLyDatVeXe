<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị hệ thống</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <div class="sidebar-header">
                        <h3>Quản trị</h3>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bus" asp-action="Index">
                                <i class="bi bi-truck"></i> Quản lý xe
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Line" asp-action="Index">
                                <i class="bi bi-map"></i> Quản lý tuyến
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trip" asp-action="Index">
                                <i class="bi bi-calendar3"></i> Quản lý chuyến
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Index">
                                <i class="bi bi-person"></i> Quản lý tài khoản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Index">
                                <i class="bi bi-people"></i> Quản lý khách hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Booking" asp-action="AdminInvoiceList">
                                <i class="bi bi-ticket"></i> Quản lý vé xe
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Statistics" asp-action="Revenue">
                                <i class="bi bi-graph-up"></i> Thống kê doanh thu
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-md-10 ml-sm-auto px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1>@ViewData["Title"]</h1>
                    <div class="btn-toolbar">
                        <div class="btn-group me-2">
                            <span class="text-muted">Xin chào, Admin</span>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger ms-2">Đăng xuất</a>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
