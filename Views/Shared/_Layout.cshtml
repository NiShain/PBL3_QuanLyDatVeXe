<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DUT Bus Lines</title>

    @* CSS files *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.css" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap&subset=vietnamese" rel="stylesheet">


    <style>
        :root {
            --primary-color: #2072ff;
            --secondary-color: #4585ff;
            --accent-color: #ff6b00;
            --footer-bg: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }

        body {
            font-family: "Roboto", sans-serif; 
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        .page-wrapper {
            flex: 1 0 auto;
            padding-bottom: 80px;
        }

        /* Header */
        .topbar {
            background: linear-gradient(135deg, #ffffff, var(--secondary-color));
            padding: 12px 0;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .topbar .slogan {
                font-size: 1.2em;
                font-weight: bold;
            }

        .menu {
            background-color: var(--primary-color);
            padding: 10px 0;
        }

            .menu ul {
                list-style: none;
                padding: 0;
                display: flex;
                justify-content: center;
            }

                .menu ul li {
                    margin: 0 15px;
                }

                    .menu ul li a {
                        text-decoration: none;
                        color: white;
                        font-weight: bold;
                        transition: all 0.3s ease;
                        position: relative;
                    }

                        .menu ul li a:hover {
                            color: var(--accent-color);
                        }

        /* Login Button */
        .btn-login {
            background-color: var(--primary-color);
            border: none;
            padding: 8px 18px;
            border-radius: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-login:hover {
                background-color: var(--accent-color);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        /* Footer */
        .footer {
            background: var(--footer-bg);
            color: white;
            padding: 15px 0; /* Reduced padding */
            font-size: 0.85em; /* Smaller text */
            position: relative;
            bottom: 0;
            width: 100%;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .footer .container {
                width: 80%;
                margin: auto;
                display: flex;
                justify-content: space-around;
            }

            .footer .col-md-4 {
                flex: 1;
                margin: 0 8px;
            }

            .footer h4 {
                font-size: 1.2em; 
                font-weight: bold;
            }

            .footer p {
                font-size: 1em; 
            }

            .footer img {
                width: 60%; 
                margin-bottom: 5px;
            }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="topbar">
            <div class="left-section">
                <img src="~/Img/logo_header.jpg" id="logo" alt="logo" />
            </div>
            <div class="center-section">
                <h1 class="slogan">UY TÍN TẠO NÊN THƯƠNG HIỆU</h1>
            </div>
            <div class="right-section">
                @if (Context.Session.GetString("Role") == null)
                {
                    <button class="btn-login">
                        <i class="fa-regular fa-circle-user"></i>
                        <a asp-controller="Account" asp-action="Login">Đăng nhập/Đăng ký</a>
                    </button>
                }
                else
                {
                    <button class="btn-login">
                        <i class="fa-regular fa-circle-user"></i>
                        <a asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                    </button>
                }
            </div>
        </div>

        <div class="menu">
            <nav>
                <ul>
                    @if (Context.Session.GetString("Role") == "Admin")
                    {
                        <li><a asp-controller="Bus" asp-action="Index">Danh Sách xe</a></li>
                        <li><a asp-controller="Customer" asp-action="Index">Quản Lý khách hàng</a></li>
                        <li><a asp-controller="Trip" asp-action="Index">Quản Lý chuyến</a></li>
                        <li><a asp-controller="Line" asp-action="Index">Quản lý tuyến</a></li>
                        <li><a asp-controller="Statistics" asp-action="Revenue">Thống kê</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                        <li><a asp-controller="Booking" asp-action="SelectRoute">Lịch Trình</a></li>
                        <li><a asp-controller="Booking" asp-action="ConfirmBooking">Hóa Đơn</a></li>
                        <li><a href="facebook.com/dongocle2404" class="scroll-link">Liên Hệ</a></li>
                    }
                </ul>
            </nav>
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="footer" id="footer">
        <div class="container">
            <div class="col-md-4">
                <img src="~/Img/logo_footer.png" id="logo-footer" alt="logo footer" />
            </div>
            <div class="col-md-4">
                <h4><i class="fa-solid fa-location-dot"></i> Địa Chỉ</h4>
                <p>Trụ sở: Số 97-99 Cao Sơn Pháo, Đà Nẵng</p>
                <p>Bến xe TT: 148 Tôn Đức Thắng, Đà Nẵng</p>
            </div>
            <div class="col-md-4">
                <h4>Liên hệ</h4>
                <p><i class="fa-solid fa-phone"></i> 0236.376.76.79</p>
                <p><i class="fa-solid fa-envelope"></i> info@benxedanang.vn</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
