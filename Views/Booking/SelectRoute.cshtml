@model IEnumerable<PBL3_QuanLyDatXe.Models.Line>

@{
    ViewData["Title"] = "Chọn tuyến đường";
}

<h2 class="mb-4">🚍 Chọn tuyến đường</h2>
<div class="row mb-3">
    <div class="col-md-12">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" class="form-control" name="diemDi" placeholder="Điểm đi" value="@ViewData["CurrentDiemDi"]">
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" name="diemDen" placeholder="Điểm đến" value="@ViewData["CurrentDiemDen"]">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>
<div class="list-group">
    @foreach (var route in Model)
    {
        <a asp-action="SelectTrip" asp-route-routeId="@route.id" class="list-group-item list-group-item-action">
            <strong>@route.tenTuyen</strong> — @route.diemDi ➡️ @route.diemDen
        </a>
    }
</div>
