@model IEnumerable<PBL3_QuanLyDatXe.Models.Line>

@{
    ViewData["Title"] = "Chọn tuyến đường";
}

<h2 class="mb-4 text-center text-primary fw-bold">🚍 Chọn tuyến đường</h2>

<div class="card shadow p-4 border-0 rounded">
    <form method="get" class="row g-3 align-items-center">
        <div class="col-md-4">
            <input type="text" class="form-control rounded-pill px-3" name="diemDi" placeholder="🔍 Điểm đi" value="@ViewData["CurrentDiemDi"]">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control rounded-pill px-3" name="diemDen" placeholder="📍 Điểm đến" value="@ViewData["CurrentDiemDen"]">
        </div>
        <div class="col-md-4 text-center">
            <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
                🔎 Đặt vé
            </button>
        </div>
    </form>
</div>

<div class="mt-4">
    <div class="list-group">
        @foreach (var route in Model)
        {
            <a asp-action="SelectTrip" asp-route-routeId="@route.id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center rounded shadow-sm p-3">
                <div>
                    <h5 class="mb-1 text-dark fw-bold">@route.tenTuyen</h5>
                    <small class="text-muted">@route.diemDi ➡️ @route.diemDen</small>
                </div>
                <i class="fa-solid fa-arrow-right text-primary fs-4"></i>
            </a>
        }
    </div>
</div>
