@model PBL3_QuanLyDatXe.ViewModels.TripViewModels

@{
    ViewData["Title"] = "Thêm chuyến xe mới";
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>

<div class="container col-md-6">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="Routeid">Tuyến</label>
            <select asp-for="Routeid" class="form-control" asp-items="ViewBag.Routeid"></select>
            <span asp-validation-for="Routeid" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Busid">Xe</label>
            <select asp-for="Busid" class="form-control" asp-items="ViewBag.Busid"></select>
            <span asp-validation-for="Busid" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ngayDi">Ngày đi</label>
            <input asp-for="ngayDi" class="form-control" type="date" />
            <span asp-validation-for="ngayDi" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="gioDi">Giờ đi</label>
            <input asp-for="gioDi" class="form-control" type="time" />
            <span asp-validation-for="gioDi" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="giaVe">Giá vé</label>
            <input asp-for="giaVe" class="form-control" type="number" step="1000" />
            <span asp-validation-for="giaVe" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Tạo chuyến</button>
    </form>
</div>

