@model IEnumerable<PBL3_QuanLyDatXe.Models.Trip>
@{
    ViewData["Title"] = "Quản lý chuyến xe";
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header bg-white">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm chuyến mới
        </a>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Tuyến</th>
                    <th>Xe</th>
                    <th>Ngày đi</th>
                    <th>Giờ đi</th>
                    <th>Giá vé</th>
                    <th>Số ghế</th>
                    <th>Còn trống</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Route?.tenTuyen</td>
                        <td>@item.Bus?.tenXe</td>
                        <td>@item.ngayDi.ToShortDateString()</td>
                        <td>@item.gioDi.ToString("HH:mm")</td>
                        <td>@item.giaVe.ToString("N0")</td>
                        <td>@item.soGhe</td>
                        <td>@item.sogheconTrong</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
