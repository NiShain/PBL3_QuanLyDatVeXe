@model PBL3_QuanLyDatXe.Models.Trip

@{
    ViewData["Title"] = "Chỉnh sửa chuyến xe";
    Layout = "_AdminLayout";
}

<h2>Chỉnh sửa chuyến xe</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="Busid"></label>
        <select asp-for="Busid" class="form-control" asp-items="ViewBag.Busid"></select>
    </div>

    <div class="form-group">
        <label asp-for="Routeid"></label>
        <select asp-for="Routeid" class="form-control" asp-items="ViewBag.Routeid"></select>
    </div>

    <div class="form-group">
        <label asp-for="ngayDi"></label>
        <input asp-for="ngayDi" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="gioDi"></label>
        <input asp-for="gioDi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="giaVe"></label>
        <input asp-for="giaVe" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
