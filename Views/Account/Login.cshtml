@model PBL3_QuanLyDatXe.Models.Account

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mb-4">Đăng nhập</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="ten">Tên đăng nhập</label>
                    <input asp-for="ten" class="form-control" placeholder="Nhập tên đăng nhập" />
                    <span asp-validation-for="ten" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Mật khẩu</label>
                    <input asp-for="password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </form>
        </div>
    </div>
</div>